                    <li><a href="{{ path('app_artist_index') }}">Artistes</a></li>
                    <li><a href="{{ path('app_song_index') }}">Sons</a></li>
                    <li><a href="{{ path('app_favorite_user', {id : app.user.id}) }}">Favoris</a></li>
                    <li><a href="{{ path('app_logout') }}"> Logout </a> </li>
                </ul>
            </nav>
        </aside>
    {% endif %}
    <main>
        {% block body %}{% endblock %}
    </main>
    </body>
</html>
